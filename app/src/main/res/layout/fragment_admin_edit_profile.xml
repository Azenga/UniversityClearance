<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="8dp"
    tools:context=".adminfragments.EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/admin_ep_civ"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_white_128dp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />

        <EditText
            android:id="@+id/admin_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_student_widgets_mag_top"
            android:backgroundTint="@android:color/white"
            android:gravity="center_horizontal"
            android:hint="@string/administratir_name"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textColorHint="@color/whiteTransparent" />

        <EditText
            android:id="@+id/admin_contact_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_student_widgets_mag_top"
            android:backgroundTint="@android:color/white"
            android:gravity="center_horizontal"
            android:hint="@string/phone_et_hint"
            android:inputType="phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textColorHint="@color/whiteTransparent" />

        <Button
            android:id="@+id/admin_ep_btn"
            android:layout_width="@dimen/std_widget_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mag_8dp"
            android:background="@drawable/round_corner_btn"
            android:text="@string/finish_setup"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

    </LinearLayout>

</ScrollView>